// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main


bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  background: tabbackground
  a
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black

ul.tablinks, ul.tabs
  margin: 0
  padding: 0
  li
    display: inline-block
    padding-left: 0.5
    padding-right: 0.5
    margin: 0
    
ul.tabs
  li
    display: none
    h2
      display: none
  li.active
    display: block
  
@media only screen and (min-width: 640px)
  ul.tablinks
    display: none
  ul.tabs li
    display: block
    h2
      display: block

#auth

#foot
  display: none
@media only screen and (min-width: 640px)
  #foot
    display: block
    font-size: 14px
    text-align: center
    ul
      padding: 0
      margin: 0
    li
      display: inline-block
      list-style-type: none
      margin-right: 0.5em
      margin-left: 0.5em
    a
      text-decoration: none

#size
  position: fixed
  bottom: 0
  left: 0
  background: rgba(255, 255, 255, 0.8)
  padding: 0.5em

#flash
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    right: 1em
  ul
    position: fixed
    z-index: 1
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

.clickToEdit
  border: 1px inset transparent
.clickToEdit:hover
  background-color: #ffe
  border: 1px inset black
  &:before
    content: "âœŽ"

#dotstorm
  textarea
    width: 40em
    max-width: 80%
    height: 10em
    max-height: 30%

#addIdea
  position: relative
  div.toolbar
    margin-top: 1em
    a
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      &:active, &.active
        background: #f90
    a.note-color
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    
  canvas
    position: relative
    border-top: 1px solid black
    border-bottom: 1px solid black
    width: 100%
  textarea
    width: 100%
    max-width: 40em

.idea-browser
  text-align: right
  clear: both
  .sort-link
    float: left
  .sizes
    height: 2em
    a.resize
      display: inline-block
      width: 1em
      height: 1em
      cursor: pointer
      border: 1px solid #333
      background-color: rgba(100, 100, 0, 0.5)
      margin-right: 0.2em
      &.small
        position: relative
        top: 0.5em
        width: 1em
        height: 1em
      &.medium
        position: relative
        top: 0.25em
        width: 1.5em
        height: 1.5em
      &.large
        position: relative
        top: 0em
        width: 2em
        height: 2em

.smallIdea
  cursor: pointer
  font-size: 12px
  overflow: hidden
  position: relative
  width: 138px
  height: 138px
  margin: 1px
  float: left
  canvas
    max-width: 100%
    max-height: 100%
  .border
    width: 100%
    height: 100%
  .text
    background: rgba(0, 0, 0, 0.2)
    color: white
    position: absolute
    bottom: 0
    left: 0
    width: 100%

#showIdeas
  position: relative

  .group
    display: inline-block
    text-align: center
    float: left
    border: 1px solid #eee
    background: rgba(255, 255, 255, 0.5)
    padding: 1em

.sorting
  .smallIdea
    user-select: none
    -webkit-transform: rotate(2deg)
    -moz-transform: rotate(2deg)
    -ms-transform: rotate(2deg)
    -o-transform: rotate(2deg)
    transform: rotate(2deg)
    &:active
      -webkit-transform: rotate(-2deg)
      -moz-transform: rotate(-2deg)
      -ms-transform: rotate(-2deg)
      -o-transform: rotate(-2deg)
      transform: rotate(-2deg)
    &:hover, &.hovered
      outline: 3px solid orange

.bigIdea
  overflow: hidden
  .shadow
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: auto
    .nav
      text-align: center
      a:link
        color: white
        line-height: 1.5em
        height: 1.5em
        padding-left: 5px
        padding-right: 5px
      .prev
        float: left
      .next
        float: right
    .note
      .close
        position: absolute
        right: 0
        top: 0
        color: #000
        text-decoration: none
      margin-top: 10%
      background: rgba(255, 255, 255, 0.8)
      padding: 1em
      position: absolute
      canvas
        border: 1px solid #eee
        width: 100%

@media only screen and (min-width: 640px)
  .bigIdea .note
    width: 80%
    margin-left: 10%
