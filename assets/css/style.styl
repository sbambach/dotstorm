// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main


bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  background: tabbackground
  a
    border: 1px solid transparent
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black

ul.tablinks, ul.tabs
  margin: 0
  padding: 0
  li
    display: inline-block
    padding-left: 0.5
    padding-right: 0.5
    margin: 0
    
ul.tabs
  li
    display: none
  li.active
    display: block

a:link.cta, a:visited.cta, a.cta
  color: white
  z-index: auto
.cta-thin
  line-height: 1.5em
  height: 1.5em
  
#foot
  clear: both
  display: none

#auth
  float: right
  color: white

#size
  user-select: none
  position: fixed
  bottom: 0
  right: 0
  background: rgba(255, 255, 255, 0.8)
  padding: 0.5em

#flash
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    right: 1em
  ul
    position: fixed
    z-index: 1
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

#about
  display: none
  padding: 1em
  border-top: 1px solid #ddd
  max-width: 40em
  margin-left: auto
  margin-right: auto
  margin-top: 1em
@media only screen and (min-width: 640px)
  #about
    display: block

.clickToEdit
  border: 1px inset transparent
.clickToEdit:hover
  background-color: #ffe
  border: 1px inset black
  &:before
    content: "âœŽ"

#dotstorm
  h1
    margin-top: 0.2em
    margin-bottom: 0.2em
  textarea
    width: 40em
    max-width: 80%
    height: 10em
    max-height: 30%
  margin-bottom: 1em
  border-bottom: 1px solid #ddd

.canvasHolder
  position: relative
  .canvas
    width: 100%
    height: 100%
  .text, .text textarea, .text textarea[disabled=disabled]
    position: absolute
    top: 0
    left: 0
    margin: 0
    padding: 0
    width: 100%
    height: 100%
    white-space: pre-wrap
    color: black
    font-family: Arial
    line-height: 1em
    width: 100%
    height: 100%
    border: none 
    background: transparent
    text-align: left
    overflow: hidden
    resize: none


#addIdea
  min-width: 240px
  max-width: 600px
  position: relative
  div.toolbar
    margin-top: 1em
    a
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      &:active, &.active
        background: #f90
    a.note-color
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    
  canvas
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.idea-browser
  clear: both
  .sort-link
    float: left
  .sizes
    height: 2em
    a.resize
      display: inline-block
      width: 1em
      height: 1em
      cursor: pointer
      border: 1px solid #333
      background-color: rgba(100, 100, 0, 0.5)
      margin-right: 0.2em
      &.small
        position: relative
        top: 0.5em
        width: 1em
        height: 1em
      &.medium
        position: relative
        top: 0.25em
        width: 1.5em
        height: 1.5em
      &.large
        position: relative
        top: 0em
        width: 2em
        height: 2em

.smallIdea
  cursor: pointer
  overflow: hidden
  position: relative
  width: 118px
  height: 118px
  margin: 1px
  float: left
  .canvas img
    max-width: 100%
    max-height: 100%
  .border
    width: 100%
    height: 100%
  .tags
    position: absolute
    bottom: 5px 
    left: 0
    background-color: rgba(0, 0, 0, 0.5)
    color: white
    font-size: 12px
  .dragger
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

#showIdeas
  position: relative


  .group
    display: inline-block
    text-align: center
    float: left
    border: 1px solid #999
    background: rgba(200, 220, 200, 0.5)
    padding: 1em

.idea-browser
  &, *
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -o-user-select: none
    user-select: none
  input
    -webkit-user-select: text
    -khtml-user-select: text
    -moz-user-select: text
    -o-user-select: text
    user-select: text

  .smallIdea
    &:active, &.active
      -webkit-transform: rotate(-2deg)
      -moz-transform: rotate(-2deg)
      -ms-transform: rotate(-2deg)
      -o-transform: rotate(-2deg)
      transform: rotate(-2deg)
    &:hover, &.hovered
      outline: 3px solid orange

.bigIdea
  overflow: hidden
  .shadow
    overflow: auto
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
  .note
    position: relative
    margin-top: 5%
    margin-left: auto
    margin-right: auto
    background: rgba(255, 255, 255, 0.8)
    padding: 1em
    .nav
      min-width: 240px
      text-align: center
      a:link
        color: white
        line-height: 1.5em
        height: 1.5em
        padding-left: 5px
        padding-right: 5px
      .prev
        float: left
      .next
        float: right
        margin-right: 1em
    .image
      text-align: center
      img
        max-width: 100%
    .close
      position: absolute
      right: 0
      top: 0
      color: #000
      text-decoration: none
      font-size: 24pt
