// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main


bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  font-size: 20px
  height: 24px
  background: tabbackground
  a
    border: 1px solid transparent
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black
  a.home
    margin: 0
    padding: 0
    float: left
    position: relative
    display: inline-block
    width: 32px
    height: 24px

   

ul.tablinks, ul.tabs
  margin: 0
  padding: 0
  li
    display: inline-block
    padding-left: 0.5
    padding-right: 0.5
    margin: 0
    
ul.tabs
  li
    display: none
  li.active
    display: block

a:link.cta, a:visited.cta, a.cta
  color: white
.cta-thin
  line-height: 1.5em
  height: 1.5em

#foot
  clear: both
  display: none

#auth
  position: relative
  float: right
  color: white
  span.users
    display: inline-block
    width: 2.5em;
    height: 2.5em;
    text-align: right
    position: relative
    top: 3px
    right: 1em
    cursor: pointer
    img
      vertical-align: middle
  text-shadow: black 0 0 5px, black 0 0 5px, black 0 0 5px
  .userlist
    position: absolute
    top: 25px
    right: 0
    z-index: 1
    .box
      border-radius: 5px
      background: rgba(0, 0, 0, 0.8)
      padding: 1em
    ol
      margin: 0
      padding: 0

    li
      padding: 0
      margin-left: 1em
      list-style-type: disc
    input
      width: 10em
  .invite
    display: none
    margin-top: 10px
    border-radius: 5px
    border-top: 1px solid
    a, a:link, a:visited
      color: #09f
      font-weight: bold

@media only screen and (min-width: 480px)
  #auth .invite 
    display: block
    

#flash
  z-index: 100
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    text-align: center
    right: 0em
    width: 2em
    height: 2em
  ul
    z-index: 100
    position: fixed
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

.clickToEdit
  border: 1px inset transparent
.clickToEdit:hover
  background-color: #ffe
  border: 1px inset black
  &:before
    content: "✎"
.inPlaceTextarea
  max-width: 90%
  overflow: hidden
  textarea
    max-width: 80%
    overflow: hidden
.editInPlace
  max-width: 90%
  overflow: hidden
  display: inline-block
  input
    max-width: 60%

#dotstorm
  h1
    margin-top: 0.2em
    margin-bottom: 0.2em
  margin-bottom: 1em
  border-bottom: 1px solid #ddd

.canvasHolder
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  position: relative
  .image
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    img
      width: 100%
  .canvas
    position: relative
    width: 100%
    height: 100%
  .text, .text textarea, .text textarea[disabled=disabled]
    position: absolute
    top: 0
    left: 0
    margin: 0
    padding: 0
    width: 100%
    height: 100%
    white-space: pre-wrap
    color: black
    font-family: Arial
    line-height: 1em
    width: 100%
    height: 100%
    border: none 
    background: transparent
    text-align: left
    overflow: hidden
    resize: none

#addIdea
  min-width: 240px
  max-width: 600px
  position: relative
  div.toolbar
    margin-top: 1em
    a
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      padding: 6px
    a.tool
      &:active, &.active
        background: #f90
      float: left
    a.note-color
      position: relative
      top: 5px
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    
  canvas
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  input[type=text]
    max-width: 160px

.sort.active
  font-weight: bold
  &:before
    content: "↑"
  &.reverse:before
    content: "↓"

.smallIdea
  cursor: pointer
  overflow: hidden
  //position: relative
  width: 118px
  height: 118px
  margin: 1px
  float: left
  &.fade
    opacity: 0.2
  .canvas img
    max-width: 100%
    max-height: 100%
  .border
    width: 100%
    height: 100%
  .votes
    position: absolute
    top: 0
    right: 0
  .tags
    position: absolute
    bottom: 5px 
    left: 0
    background-color: rgba(0, 0, 0, 0.5)
    color: white
    font-size: 12px
  .dragger
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.tag-links
  margin-bottom: 0.5em
  border-bottom: 1px solid #eee
  a.tag
    &, &:link, &:visited
      margin-right: 0.5em
      &.active
        font-weight: bold
      &.inactive
        color: #999

#showIdeas
  position: relative

  .group
    display: inline-block
    text-align: center
    float: left
    border: 1px solid #999
    background: rgba(200, 220, 200, 0.5)
    padding: 1em

.front-matter
  .tag-links
    display: none
    max-width: 200px
    float: right
@media only screen and (min-width: 300px)
  .front-matter .tag-links
    display: block

.idea-browser
  &, *
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -o-user-select: none
    user-select: none
  input
    -webkit-user-select: text
    -khtml-user-select: text
    -moz-user-select: text
    -o-user-select: text
    user-select: text
  .smallIdea, .group
    &.active
      -webkit-transform: rotate(-2deg)
      -moz-transform: rotate(-2deg)
      -ms-transform: rotate(-2deg)
      -o-transform: rotate(-2deg)
      transform: rotate(-2deg)
      opacity: 0.7
      z-index: 10
    &.hovered
      outline: 1em solid #999
    &.leftside
      -webkit-box-shadow: -2em 0 1em orange
      -khtml-box-shadow: -2em 0 1em orange
      -moz-box-shadow: -2em 0 1em orange
      -o-box-shadow: -2em 0 1em orange
      box-shadow: -2em 0 1em orange
      //border-left: 6px solid orange
      //width: 112px
    &.rightside
      -webkit-box-shadow: 2em 0 1em orange
      -khtml-box-shadow: 2em 0 1em orange
      -moz-box-shadow: 2em 0 1em orange
      -o-box-shadow: 2em 0 1em orange
      box-shadow: 2em 0 1em orange
      //width: 111px
      //border-right: 6px solid orange
  .smallIdea
    .border
      width: 118px
      height: 118px

.vote-widget
  display: inline-block
  width: 4em
  text-align: right
  height: 32px
  a.upvote
    display: inline-block
    height: 5em
  img
    float: left
  .vote-count
    display: inline-block
    text-align: center
    background: green
    font-size: 16px
    line-height: 32px
    width: 32px
    height: 32px
    border-radius: 32px
    color: white
    font-weight: bold
    -webkit-box-shadow: inset 0px 0px 10px white
    -khtml-box-shadow: inset 0px 0px 10px white
    -moz-box-shadow: inset 0px 0px 10px white
    -o-box-shadow: inset 0px 0px 10px white
    box-shadow: inset 0px 0px 10px white
    &.active
      -webkit-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -khtml-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -moz-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -o-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      box-shadow: 0px 0px 5px red, 0px 0px 5px red

.bigIdea
  overflow: hidden
  .shadow
    overflow: auto
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
  .note
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box
    -webkit-box-shadow: 0px 0px 50px white
    -khtml-box-shadow: 0px 0px 50px white
    -moz-box-shadow: 0px 0px 50px white
    -o-box-shadow: 0px 0px 50px white
    box-shadow: 0px 0px 50px white
    position: relative
    margin-left: auto
    margin-right: auto
    padding-top: 0.5em
    padding-bottom: 0.5em
    background: rgba(255, 255, 255, 0.8)
    form
      -webkit-user-select: text
      -khtml-user-select: text
      -moz-user-select: text
      -o-user-select: text
      user-select: text
      
    .close
      cursor: pointer
      position: absolute
      width: 2em
      height: 2em
      text-align: center
      right: 0
      top: 0
      color: #000
      text-decoration: none
      font-size: 24pt
    .nav
      position: absolute
      bottom: 0
      width: 30%
      height: 30%
      -webkit-user-select: none
      -khtml-user-select: none
      -moz-user-select: none
      -o-user-select: none
      user-select: none
      &.prevHolder
        left: 0
      &.nextHolder
        right: 0
      .navlink
        color: orange
        font-weight: bold
        height: 100%
        cursor: pointer
        display: none
        font-size: 90pt
        background: rgba(0, 0, 0, 0.5)
      &:hover .navlink
        display: block
    .metadata
      font-size: 24px
      padding-left: 0.5em
      padding-right: 0.5em
    .image-boxed, .canvasHolder
      margin-left: auto
      margin-right: auto
    .canvasHolder
      text-align: center
      img
        max-width: 100%

    .toolbar
      text-align: center
      .edit
        float: left
      img
        vertical-align: middle
      padding-bottom: 0.5em

#size
  // Debug sizes
  display: none
  position: fixed
  bottom: 0
  right: 0
  background: rgba(255, 255, 255, 0.8)
  padding: 0.5em
  z-index: 100

