// Mixins

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main

body
  position: relative
  background: url("../img/frenchstucco.png") repeat
body,textarea
  font-family: Vollkorn,serif

a:link, a:visited
  color: #00e


#page
  padding: 1em

#auth

#flash
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    right: 1em
  ul
    position: fixed
    z-index: 1
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#rights
  font-size: 16px
  .right
    position: relative
    padding: 1em
    .finished
      font-size: 20px
      padding: 1em
      background-color: #ffe
      display: inline-block
      border-radius: 2px
      max-width: 33em
    .number
      display: inline-block
      float: left
      font-size: 40px
      height: 100%
    textarea
      border: 1px solid #eee
      width: 500px
    .editor
      display: inline-block
    .editlink
      float: left
      margin-right: 1em
    .voting
      font-size: 16px
      img
        max-height: 1em


