// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main


bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  background: tabbackground
  a
    border: 1px solid transparent
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black

ul.tablinks, ul.tabs
  margin: 0
  padding: 0
  li
    display: inline-block
    padding-left: 0.5
    padding-right: 0.5
    margin: 0
    
ul.tabs
  li
    display: none
  li.active
    display: block

.cta
  z-index: auto
a:link.cta, a:visited.cta, a.cta
  color: white
.cta-thin
  line-height: 1.5em
  height: 1.5em
  
#foot
  clear: both
  display: none

#auth
  position: relative
  float: right
  color: white
  span.users
    margin-right: 1em
    cursor: pointer
    img
      vertical-align: middle
  text-shadow: black 0 0 5px, black 0 0 5px, black 0 0 5px
  .userlist
    position: absolute
    top: 19px
    right: 0
    z-index: 1
    .box
      border-radius: 5px
      background: rgba(0, 0, 0, 0.8)
      padding: 1em
    ol
      margin: 0
      padding: 0

    li
      padding: 0
      margin-left: 1em
      list-style-type: disc
    input
      width: 10em
  .invite
    display: none
    margin-top: 10px
    border-radius: 5px
    border-top: 1px solid
    a, a:link, a:visited
      color: #09f
      font-weight: bold

@media only screen and (min-width: 480px)
  #auth .invite 
    display: block
    

#size
  position: fixed
  bottom: 0
  right: 0
  background: rgba(255, 255, 255, 0.8)
  padding: 0.5em
  z-index: 100

#flash
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    right: 1em
  ul
    position: fixed
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

.clickToEdit
  border: 1px inset transparent
.clickToEdit:hover
  background-color: #ffe
  border: 1px inset black
  &:before
    content: "âœŽ"
.editInPlace
  display: inline-block

#dotstorm
  h1
    margin-top: 0.2em
    margin-bottom: 0.2em
  textarea
    width: 40em
    max-width: 80%
    height: 10em
    max-height: 30%
  margin-bottom: 1em
  border-bottom: 1px solid #ddd

.canvasHolder
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  position: relative
  .canvas
    width: 100%
    height: 100%
  .text, .text textarea, .text textarea[disabled=disabled]
    position: absolute
    top: 0
    left: 0
    margin: 0
    padding: 0
    width: 100%
    height: 100%
    white-space: pre-wrap
    color: black
    font-family: Arial
    line-height: 1em
    width: 100%
    height: 100%
    border: none 
    background: transparent
    text-align: left
    overflow: hidden
    resize: none


#addIdea
  min-width: 240px
  max-width: 600px
  position: relative
  div.toolbar
    margin-top: 1em
    a
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      &:active, &.active
        background: #f90
    a.note-color
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    
  canvas
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.idea-browser
  clear: both
  .sort-link
    float: left
  .sizes
    height: 2em
    a.resize
      display: inline-block
      width: 1em
      height: 1em
      cursor: pointer
      border: 1px solid #333
      background-color: rgba(100, 100, 0, 0.5)
      margin-right: 0.2em
      &.small
        position: relative
        top: 0.5em
        width: 1em
        height: 1em
      &.medium
        position: relative
        top: 0.25em
        width: 1.5em
        height: 1.5em
      &.large
        position: relative
        top: 0em
        width: 2em
        height: 2em

.smallIdea
  cursor: pointer
  overflow: hidden
  position: relative
  width: 118px
  height: 118px
  margin: 1px
  float: left
  &.fade
    opacity: 0.2
  .canvas img
    max-width: 100%
    max-height: 100%
  .border
    width: 100%
    height: 100%
  .tags
    position: absolute
    bottom: 5px 
    left: 0
    background-color: rgba(0, 0, 0, 0.5)
    color: white
    font-size: 12px
  .dragger
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  .votes
    position: absolute
    top: 0
    right: 0

.tag-links
  margin-bottom: 0.5em
  border-bottom: 1px solid #eee
  a.tag
    &, &:link, &:visited
      margin-right: 0.5em
      &.active
        font-weight: bold
      &.inactive
        color: #999

#showIdeas
  position: relative

  .group
    display: inline-block
    text-align: center
    float: left
    border: 1px solid #999
    background: rgba(200, 220, 200, 0.5)
    padding: 1em

.idea-browser
  &, *
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -o-user-select: none
    user-select: none
  input
    -webkit-user-select: text
    -khtml-user-select: text
    -moz-user-select: text
    -o-user-select: text
    user-select: text

  .smallIdea
    &.active
      -webkit-transform: rotate(-2deg)
      -moz-transform: rotate(-2deg)
      -ms-transform: rotate(-2deg)
      -o-transform: rotate(-2deg)
      transform: rotate(-2deg)
      opacity: 0.7
      z-index: 10
    .border
      width: 118px
      height: 118px
    &.hovered
      outline: 3px solid orange
    &.leftside .border
      border-left: 6px solid orange
      width: 112px
    &.rightside .border
      border-right: 6px solid orange
      width: 112px

.vote-widget
  display: inline-block
  img
    float: left
  .vote-count
    display: inline-block
    text-align: center
    background: green
    font-size: 16px
    line-height: 32px
    width: 32px
    height: 32px
    border-radius: 32px
    color: white
    font-weight: bold
    box-shadow: inset 0px 0px 10px white
    &.active
      box-shadow: 0px 0px 5px red, 0px 0px 5px red

.tagOverlay
  overflow: hidden
  .shadow
    overflow: auto
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%

.bigIdea
  overflow: hidden
  .shadow
    overflow: auto
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
  .note
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box
    box-shadow: 0px 0px 50px white
    position: relative
    margin-left: auto
    margin-right: auto
    padding-top: 0.5em
    padding-bottom: 0.5em
    background: rgba(255, 255, 255, 0.8)
    .close
      cursor: pointer
      position: absolute
      right: 0
      top: 0
      color: #000
      text-decoration: none
      font-size: 24pt
    .nav
      position: absolute
      bottom: 0
      width: 30%
      height: 30%
      -webkit-user-select: none
      -khtml-user-select: none
      -moz-user-select: none
      -o-user-select: none
      user-select: none
      &.prevHolder
        left: 0
      &.nextHolder
        right: 0
      .navlink
        color: orange
        font-weight: bold
        height: 100%
        cursor: pointer
        display: none
        font-size: 90pt
        background: rgba(0, 0, 0, 0.5)
      &:hover .navlink
        display: block
    .metadata
      font-size: 24px
      padding-left: 0.5em
      padding-right: 0.5em
    .image-boxed, .canvasHolder
      margin-left: auto
      margin-right: auto
    .canvasHolder
      text-align: center
      img
        max-width: 100%
    .toolbar
      text-align: center
      .edit
        float: left
      img
        vertical-align: middle
      padding-bottom: 0.5em
