// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main


bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  background: tabbackground
  a
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black

ul.tablinks, ul.tabs
  margin: 0
  padding: 0
  li
    display: inline-block
    padding-left: 0.5
    padding-right: 0.5
    margin: 0
    
ul.tabs
  li
    display: none
    h2
      display: none
  li.active
    display: block
  
@media only screen and (min-width: 640px)
  ul.tablinks
    display: none
  ul.tabs li
    display: block
    h2
      display: block

#auth

#foot
  display: none
@media only screen and (min-width: 640px)
  #foot
    display: block
    font-size: 14px
    text-align: center
    ul
      padding: 0
      margin: 0
    li
      display: inline-block
      list-style-type: none
      margin-right: 0.5em
      margin-left: 0.5em
    a
      text-decoration: none

#size
  position: fixed
  bottom: 0
  left: 0
  background: rgba(255, 255, 255, 0.8)
  padding: 0.5em

#flash
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    right: 1em
  ul
    position: fixed
    z-index: 1
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

#dotstorm
  .topic:hover
    background-color: #ffe
    border: 1px inset black
    &:before
      content: "âœŽ"
  textarea
    width: 40em
    max-width: 80%
    height: 10em
    max-height: 30%

#addIdea
  position: relative
  div.toolbar
    a
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      &:active, &.active
        background: #f90
    a.note-color
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    
  canvas
    position: relative
    border-top: 1px solid black
    border-bottom: 1px solid black
    width: 100%
  textarea
    width: 100%
    max-width: 40em
