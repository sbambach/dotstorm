// Mixins
@import "normalize.css"
@import "buttons.css"

background-rgba(r, g, b, a)
  // rgba with fallback to rgb
  background-color: rgb(r, g, b)
  background-color: rgba(r, g, b, a)

// Main

smallIdeaMargin = 14px

bodybackground = url("../img/frenchstucco.png") repeat
tabbackground = url("../img/dark_dotted.png") repeat

body
  position: relative
  background: bodybackground
  background-position: 0px -32px
body,textarea
  font-family: "Droid Sans",Helvetica,sans-serif

a:link, a:visited
  color: #00e
a:link.cta, a:visited.cta, a.cta
  color: white

#size
  position: absolute
  bottom: 0
  left: 0
  background: white
  border: 1px solid #aaa
  display: none

input[type=text]
  border: 1px solid gray
  padding: 0.2em

nav.tabs, ul.tablinks
  font-size: 20px
  height: 24px
  background: tabbackground
  a
    border: 1px solid transparent
    color: white
    text-decoration: none
    padding-left: 0.5em
    padding-right: 0.5em
    &.active
      background: bodybackground
      color: black
  a.home
    margin: 0
    padding: 0
    float: left
    position: relative
    display: inline-block
    width: 32px
    height: 24px

#auth
  position: relative
  float: right
  color: white
  span.users
    display: inline-block
    width: 2.5em;
    height: 2.5em;
    text-align: right
    position: relative
    top: 3px
    right: 1em
    cursor: pointer
    img
      vertical-align: middle
  text-shadow: black 0 0 5px, black 0 0 5px, black 0 0 5px
  .userlist
    position: absolute
    top: 25px
    right: 0
    z-index: 1
    .box
      border-radius: 5px
      background: rgba(0, 0, 0, 0.8)
      padding: 1em
    ol
      margin: 0
      padding: 0

    li
      padding: 0
      margin-left: 1em
      list-style-type: disc
    input
      width: 10em
  .invite
    display: none
    margin-top: 10px
    border-radius: 5px
    border-top: 1px solid
    a, a:link, a:visited
      color: #09f
      font-weight: bold

@media only screen and (min-width: 480px)
  #auth .invite 
    display: block

#flash
  z-index: 100
  font-size: 20px
  a.close
    color: black
    text-decoration: none
    position: absolute
    text-align: center
    right: 0em
    width: 2em
    height: 2em
  ul
    z-index: 100
    position: fixed
    width: 85%
    top: 1em
    left: 5%
    li
      position: relative
      padding: 0.5em
      margin-left: 0
      list-style-type: none
      box-shadow: 0px 0px 1px black, 0 0 20px white inset
      color: white
      text-shadow: black 0px 1px 2px
      margin-right: 1em
      &.info
        background-rgba(0, 153, 255, 0.9)
      &.error
        background-rgba(255, 51, 0, 0.9)

#intro
  text-align: center
  margin-left: auto
  margin-right: auto

/*
  Editing
*/

.clickToEdit
  border: 1px inset transparent
.clickToEdit:hover
  background-color: #ffe
  border: 1px inset black
  &:before
    content: "âœŽ"
.inPlaceTextarea
  max-width: 90%
  overflow: hidden
  textarea
    max-width: 80%
    overflow: hidden
.editInPlace
  max-width: 90%
  overflow: hidden
  display: inline-block
  input
    max-width: 60%

#addIdea
  margin-left: auto
  margin-right: auto
  min-width: 320px
  max-width: 600px
  position: relative
  div.toolbar
    margin-top: 1em
    a, .file-input
      display: inline-block
      width: 32px
      height: 32px
      border: 1px solid #eee
    a.tool
      padding: 6px
    a.tool
      &:active, &.active
        background: #f90
      float: left
    a.note-color
      position: relative
      top: 5px
      &.yellow
        background-color: #ffd
      &.pink
        background-color: #fdd
      &.aqua
        background-color: #ddf
      &.green
        background-color: #dfd
    .file-input
      padding: 6px
      float: left
      background: url("../img/camera.png") no-repeat
      background-position: 6px 6px
      &.loading
        background: url("../img/spinner.gif") no-repeat
        background-position: 14px 14px
      input[type=file]
        position: absolute
        z-index: 2
        opacity: 0
    
  canvas
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  input[type=text]
    max-width: 160px
  .canvasHolder
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    -ie-box-sizing: border-box
    box-sizing: border-box
    position: relative
    width: 100%
    height: 100%
    .photo
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      img
        width: 100%
    .canvas
      position: relative
      width: 100%
      height: 100%
    .text, .text textarea, .text textarea[disabled=disabled]
      position: absolute
      top: 0
      left: 0
      margin: 0
      padding: 0
      width: 100%
      height: 100%
      white-space: pre-wrap
      color: black
      font-family: Arial
      line-height: 1em
      width: 100%
      height: 100%
      border: none 
      background: transparent
      text-align: left
      overflow: hidden
      resize: none
  .cta.loading
    background-image: url("../img/spinner.gif")
    background-repeat: no-repeat
    background-color: #0093e6


/*
  Organizer
*/


#dotstorm
  @media only screen and (min-width: 480px)
    margin: 1em
  h1
    display: inline-block
    margin-top: 0.2em
    margin-bottom: 0.2em
    clear: both
  margin-bottom: 1em
  border-bottom: 1px solid #ddd
  .embed
    position: absolute
    right: 1em
    top: 3em

@media only screen and (min-width: 480px)
  .idea-browser
    margin: 1em
.idea-browser
  position: relative
  &, *
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -o-user-select: none
    user-select: none
  input
    -webkit-user-select: text
    -khtml-user-select: text
    -moz-user-select: text
    -o-user-select: text
    user-select: text

  .add-link-block
    float: left
    width: 150px
    height: 150px
    text-align: center
    display: inline-block
    .add-link
      -webkit-box-sizing: content-box
      -moz-box-sizing: content-box
      box-sizing: content-box
      z-index: 1
      position: relative
      margin-right: 0.5em
      padding-top: 20px
      padding-bottom: 20px
      margin-left: auto
      margin-right: auto
      margin-top: 50px

// All ideas are in masonry's.
.masonry
  position: relative
  float: left
  margin-top: smallIdeaMargin
  display: inline-block
  border: 1px solid transparent
  text-align: center
  padding-top: 10px
  padding-bottom: 10px
  .labelHolder
    height: 27px
    input[type=text]
      width: 200px
    form
      display: inline
  .embed
    position: absolute
    right: 0.5em
    top: 0
    text-decoration: none
    font-size: 20px
    color: #060
  .smallIdea
    overflow: visible
    margin-left: 5px
    margin-right: 5px
  &.group
    padding-left: 13px
    padding-right: 13px
    .smallIdea
      margin-left: 2px
      margin-right: 2px
    margin-left: 5px
    margin-right: 5px
    border-color: #999
    background: rgba(200, 200, 200, 0.5)

.smallIdea
  float: left
  cursor: pointer
  overflow: hidden
  position: relative
  width: 120px
  height: 120px
  &.fade /* for tag fading.. */
    opacity: 0.2
  img
    border: 1px solid #ccc
    max-width: 100%
    max-height: 100%
  .votes
    position: absolute
    top: 0
    right: 0
  .tags
    position: absolute
    bottom: 0
    left: 0
    background-color: rgba(0, 0, 0, 0.5)
    color: white
    font-size: 12px
  .dragger
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.smallIdea, .group
  &.active
    -webkit-transform: rotate(-2deg)
    -moz-transform: rotate(-2deg)
    -ms-transform: rotate(-2deg)
    -o-transform: rotate(-2deg)
    transform: rotate(-2deg)
    opacity: 0.7
    z-index: 10
  &.hovered
    outline: 1em solid #E83C00
.placeholder.active
  outline: 3px dashed #E83C00
.dropline
  z-index: 1
  position: absolute
  width: 44px
  height: 118px
  background: url("../img/droptarget.png")
  background-size: 44px 100%

.vote-widget
  display: inline-block
  width: 4em
  text-align: right
  height: 32px
  a.upvote
    display: inline-block
    height: 5em
  img
    float: left
  .vote-count
    display: inline-block
    text-align: center
    background: green
    font-size: 16px
    line-height: 32px
    width: 32px
    height: 32px
    border-radius: 32px
    color: white
    font-weight: bold
    -webkit-box-shadow: inset 0px 0px 10px white
    -khtml-box-shadow: inset 0px 0px 10px white
    -moz-box-shadow: inset 0px 0px 10px white
    -o-box-shadow: inset 0px 0px 10px white
    box-shadow: inset 0px 0px 10px white
    &.active
      -webkit-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -khtml-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -moz-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      -o-box-shadow: 0px 0px 5px red, 0px 0px 5px red
      box-shadow: 0px 0px 5px red, 0px 0px 5px red

#trash
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  -ms-box-sizing: border-box
  box-sizing: border-box
  padding: 2em
  float: right
  background: rgba(200, 200, 200, 0.5)
  cursor: pointer
  &.dragging
    background: rgba(255, 200, 0, 0.5)
    &.active
      background-color: #E83C00
  .icon
    width: 32px
    height: 32px
    margin-left: auto
    margin-right: auto
    background: url("../img/trash-full.png")
  &.empty
    cursor: auto
    &.open
      .contents
        display: none
    .icon
      background: url("../img/trash-empty.png")
  .contents
    display: none
    margin-top: 0.5em
  &.open
    .contents
      display: block

.bigIdea
  overflow: hidden
  .shadow
    z-index: 1
    overflow: auto
    background-color: rgba(0, 0, 0, 0.5)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
  .note
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    -ie-box-sizing: border-box
    box-sizing: border-box
    -webkit-box-shadow: 0px 0px 50px white
    -khtml-box-shadow: 0px 0px 50px white
    -moz-box-shadow: 0px 0px 50px white
    -o-box-shadow: 0px 0px 50px white
    box-shadow: 0px 0px 50px white
    max-width: 100%
    position: relative
    padding: 1em
    margin-left: auto
    margin-right: auto
    background: rgba(255, 255, 255, 0.8)
    .toolbar
      text-align: center
      .edit
        float: left
        margin-left: 1em
      img
        vertical-align: middle
      padding-bottom: 0.5em

    .canvasHolder
      text-align: center
      img
        max-width: 100%
        max-height: 100%

    form
      -webkit-user-select: text
      -khtml-user-select: text
      -moz-user-select: text
      -o-user-select: text
      user-select: text
      
    .close
      cursor: pointer
      position: absolute
      width: 2em
      height: 2em
      text-align: center
      right: 0
      top: 0
      color: #000
      text-decoration: none
      font-size: 24pt
    .nav
      position: absolute
      bottom: 40px
      width: 30%
      height: 30%
      -webkit-user-select: none
      -khtml-user-select: none
      -moz-user-select: none
      -o-user-select: none
      user-select: none
      &.prevHolder
        left: 0
      &.nextHolder
        right: 0
      .navlink
        color: orange
        font-weight: bold
        height: 100%
        cursor: pointer
        display: none
        font-size: 90pt
        background: rgba(0, 0, 0, 0.5)
      &:hover .navlink
        display: block
    .tags
      font-size: 24px
      padding-left: 0.5em
      padding-right: 0.5em

/*
  Tag links
*/
.tag-links
  margin-bottom: 0.5em
  border-bottom: 1px solid #eee
  a.tag
    &, &:link, &:visited
      margin-right: 0.5em
      &.active
        font-weight: bold
      &.inactive
        color: #999
